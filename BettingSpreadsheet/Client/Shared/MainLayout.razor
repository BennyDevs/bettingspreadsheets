@inherits LayoutComponentBase

    <MudThemeProvider Theme="darkTheme"/>
    <MudDialogProvider />
    <MudSnackbarProvider />

    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <div class="main">
            <div class="top-row px-4">
                <MudAvatar Size="Size.Medium" Color="Color.Primary" Class="ma-2">B</MudAvatar>
            </div>

            <div class="content px-4">
                @Body
            </div>
        </div>
    </div>

